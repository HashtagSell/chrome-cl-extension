{
	"manifest_version": 2,
	"name": "#Sell | Craigslist Listing Tool",
	"version": "0.1",
	"description": "Post your #Sell listings on Craigslist.",
	"homepage_url": "http://hashtagsell.com",
	"default_locale": "en",

	"icons": {
		"16" : "icons/16x16.png",
		"48" : "icons/48x48.png",
		"128" : "icons/128x128.png"
	},

	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": true
	},

	"permissions": [
		"tabs", 
		"<all_urls>",
		"storage",
	    "http://*/*",
    	"https://*/*"
	]
}