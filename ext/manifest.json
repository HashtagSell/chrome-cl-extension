{
	"manifest_version": 2,
	"name": "#Sell -> Craigslist",
	"version": "0.1",
	"description": "Post your #Sell listings on Craigslist.",
	"homepage_url": "http://hashtagsell.com",

	"browser_action": {
		"default_icon": "icons/48x48.png"
	},

	"icons": {
		"16" : "icons/16x16.png",
		"48" : "icons/48x48.png",
		"128" : "icons/128x128.png"
	},

	"background": {
		"scripts": [
			"js/background.js",
			"js/listingmeta.js",
			"js/authentication.js"
		]
	},

	"permissions": [
		"storage",
		"tabs", 
		"<all_urls>",
		"*://*/*"
	],
	
	"web_accessible_resources": [
		"js/*"
	],
	
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [{
        "matches": [
            "*://*.craigslist.org/*"
        ],
        "js": [
			"js/mootools-core-1.3.1.js",
			"js/mootools-more-1.4.0.1.js",
			"js/common.js",
			"js/listingmeta.js",
			"js/inject.js"
        ],
        "run_at": "document_end",
        "all_frames": false
    }]
}